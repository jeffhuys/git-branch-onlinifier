<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Repository</th>
            <th>Branch</th>
            <th>Port</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {{#each servers}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{repo}}</td>
            <td>{{branch}}</td>
            <td>{{port}}</td>
            <td>{{status}}</td>
            <td>
                <a href="/log/{{id}}" class="btn btn-xs btn-info">Log</a>
                {{#if process}}
                    <a href="/kill/{{id}}" class="btn btn-xs btn-danger">Kill</a>
                {{else}}
                    <a href="" class="btn btn-xs btn-danger disabled no-remove-pointer-events" data-toggle="tooltip" data-placement="top" title="Still spawning. Please wait until done.">Kill</a>
                {{/if}}
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

<script>
    $(document).ready(function() {
        $("[data-toggle='tooltip']").tooltip();
    });
</script>